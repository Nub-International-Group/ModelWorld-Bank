{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules/*",
    "dist/*"
  ]
}
